{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Rei",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.rei",
				"match": "\\b(if|while|for|ret)\\b"
			},
			{
				"name": "keyword.variable.rei",
				"match": "\\b(var|val|const)\\b"
			},
			{
				"name": "keyword.operations.rei",
				"match": "\\b[*+-/.]\\b"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.rei",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.rei",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.rei"
}